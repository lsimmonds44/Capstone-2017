@model DataObjects.RegisterCommercialViewModel

@{
    ViewBag.Title = "Register for Commercial Account";
}

<div class="row">
    <section id="registerForm">
        
        <h3>@ViewBag.Error</h3>

        @using (Html.BeginForm("RegisterCommercial", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()

            <h4>Apply for a commercial customer account!</h4>
            <hr/>

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

